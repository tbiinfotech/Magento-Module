<?xml version="1.0"?>
<config>
    <modules>
        <Mygateway_Pay>
            <version>0.1.0</version>
        </Mygateway_Pay>
    </modules>
    <frontend>
        <routers>
            <pay>
                <use>standard</use>
                <args>
                    <module>Mygateway_Pay</module>
                    <frontName>pay</frontName>
                </args>
            </pay>
			<checkout>
				<args>
					<modules>
						<mygateway_pay before="Mage_Checkout">Mygateway_Pay</mygateway_pay>
					</modules>
				</args>
			</checkout>
        </routers>
        <layout>
            <updates>
                <pay>
                    <file>pay.xml</file>
                </pay>
            </updates>
        </layout>
    </frontend>
	<admin>
		<routers>
			<adminhtml>
                <args>
                    <modules>
                        <mygateway_pay before="Mage_Adminhtml">Mygateway_Pay_Adminhtml</mygateway_pay>
                    </modules>
                </args>
            </adminhtml>
		</routers>
	</admin>
	<default>
        <sales>
            <cancel>
                <enabled>0</enabled>
                <send_email>1</send_email>
            </cancel>
        </sales>
    </default>
    <global>
    	<fieldsets>
    		 <sales_convert_quote_payment>
    		 	<check_no>
    		 		<to_order_payment>*</to_order_payment>
    		 	</check_no>
    		 	<check_date>
    		 		<to_order_payment>*</to_order_payment>
    		 	</check_date>
    		 </sales_convert_quote_payment>
    	</fieldsets>
        <models>
            <pay>
                <class>Mygateway_Pay_Model</class>
                <resourceModel>pay_mysql4</resourceModel>
            </pay>
            <pay_mysql4>
                <class>Mygateway_Pay_Mysql4</class>
                <entities>
                    <pay>
                        <table>pay</table>
                    </pay>
                </entities>
            </pay_mysql4>
        </models>
        <resources>
            <pay_setup>
                <setup>
                    <module>Mygateway_Pay</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </pay_setup>
            <pay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </pay_write>
            <pay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </pay_read>
        </resources>
        <blocks>
            <pay>
                <class>Mygateway_Pay_Block</class>
            </pay>
        </blocks>
        <helpers>
            <pay>
                <class>Mygateway_Pay_Helper</class>
            </pay>
        </helpers>
    </global>
    <default>
        <payment>
            <pay>
                <active>1</active>
                <model>pay/pay</model>
                <order_status>processing</order_status>
                <title>4Pay </title>
                <message>Please enter your credit card information</message>
            </pay>
         </payment>
    </default>
</config>
